#include <bits/stdc++.h>
using namespace std;

int findPlatform(int arr[], int dep[], int n) {
    sort(arr, arr + n);
    sort(dep, dep + n);
    int i = 0, j = 0, plat = 0, ans = 0;

    while (i < n && j < n) {
        if (arr[i] <= dep[j]) {
            plat++;
            ans = max(ans, plat);
            i++;
        } else {
            plat--;
            j++;
        }
    }
    return ans;
}

int main() {
    int arr[] = {900, 940, 950, 1100, 1500, 1800};
    int dep[] = {910, 1200, 1120, 1130, 1900, 2000};
    int n = 6;

    cout << "Minimum Platforms Required = " << findPlatform(arr, dep, n);
    return 0;
}
