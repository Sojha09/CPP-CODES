class Solution {
public:
    int maxProduct(vector<int>& nums) {
    int n = nums.size();
    int maxi = nums[0];
    int curr_max = nums[0];
    int curr_min = nums[0];
    for (int i = 1; i < n; i++) {
        int temp_max = max({nums[i], curr_max * nums[i], curr_min * nums[i]});
        int temp_min = min({nums[i], curr_max * nums[i], curr_min * nums[i]});
        curr_max = temp_max;
        curr_min = temp_min;
        maxi = max(maxi, curr_max);
    }
    return maxi;


    }
};
