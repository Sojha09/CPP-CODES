#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;

    int setBits = 0, unsetBits = 0;
    int totalBits = sizeof(n) * 8; 

    for (int i = 0; i < totalBits; i++) {
        if (n & (1 << i))
            setBits++;
        else
            unsetBits++;
    }

    cout << "Set bits: " << setBits << endl;
    cout << "Unset bits: " << unsetBits << endl;

    return 0;
}
