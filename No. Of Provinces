class Solution {
public:
void dfs(int src,vector<vector<int>>& isConnected,map<int,bool>&vis,int n){
    vis[src]=true;
    for(int col=0;col<n;col++){
        if(src!=col && isConnected[src][col]==1){
            if(!vis[col]){
                dfs(col,isConnected,vis,n);
            }
        }
    }
}
    int findCircleNum(vector<vector<int>>& isConnected) {
        map<int,bool>vis;
        int n=isConnected.size();
        int count=0;
        for(int i=0;i<n;i++){
            if(!vis[i]){
                dfs(i,isConnected,vis,n);
                count++;
            }
        }
        return count;
    }
};
