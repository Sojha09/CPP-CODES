class Solution {
  public:
    int helper(vector<int>& arr, int n) {
    if (n == 0)  // base case
        return 0;

    return arr[n - 1] + helper(arr, n - 1); // recursive call
}
    int arraySum(vector<int>& arr) {
        // code here
         int n = arr.size();
    return helper(arr, n);
        
    }
};
