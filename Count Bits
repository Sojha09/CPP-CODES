#include <bits/stdc++.h>
using namespace std;

vector<int> countBits(int n) {
    vector<int> dp(n + 1, 0);

    for (int i = 1; i <= n; i++) {
        dp[i] = dp[i / 2] + (i % 2);
    }

    return dp;
}

int main() {
    int n;
    cout << "Enter n ";
    cin >> n;

    vector<int> ans = countBits(n);

    for (int i = 0; i <= n; i++) {
        cout << "Number " << i << " â†’ " << ans[i] << " bits\n";
    }

    return 0;
}
